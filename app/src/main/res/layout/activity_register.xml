<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b18"
    tools:context=".RegisterActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_gravity="center">

           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:background="@drawable/motherres"
               android:weightSum="1"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:id="@+id/imageView" />


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Name"
               android:textStyle="bold"
               android:textColor="#fdfdfd"
               android:textColorHint="#fffdfd"
               android:textSize="18sp"
               android:layout_marginTop="5dp"
               android:id="@+id/editName"
               android:gravity="center"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Email"
               android:textStyle="bold"
               android:textColor="#fdfdfd"
               android:textColorHint="#fffdfd"
               android:textSize="18sp"
               android:id="@+id/editEmail"
               android:gravity="center"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Cell"
               android:textStyle="bold"
               android:textColor="#fdfdfd"
               android:textColorHint="#fffdfd"
               android:textSize="18sp"
               android:id="@+id/editCell"
               android:gravity="center"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter a user name"
               android:textStyle="bold"
               android:textColor="#fdfdfd"
               android:textColorHint="#fffdfd"
               android:textSize="18sp"
               android:id="@+id/editHusbandCell"
               android:gravity="center"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:gravity="center"
               >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Blood Group"
                   android:textSize="18sp"
                   android:textColor="#fff"
                   android:textStyle="bold"
                   android:layout_marginRight="20dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="5dp"/>

               <TextView
                   android:id="@+id/editblood"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:textColor="#fff"
                   android:textStyle="bold"
                   android:layout_marginRight="20dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="5dp"/>

               <Spinner
                   android:id="@+id/bloodSpinnerId"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   >

               </Spinner>

           </LinearLayout>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Week of pragnency"
               android:textStyle="bold"
               android:textColor="#fdfdfd"
               android:textColorHint="#fffdfd"
               android:textSize="18sp"
               android:id="@+id/editweek"
               android:gravity="center"/>


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="textPassword"
               android:hint="Enter Password"
               android:textStyle="bold"
               android:textColor="#fdfdfd"
               android:textColorHint="#fffdfd"
               android:textSize="18sp"
               android:id="@+id/editPassword"
               android:gravity="center"/>

           <Button
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:id="@+id/buttonRegister"
               android:layout_marginLeft="80dp"
               android:layout_below="@+id/editPassword"
               android:layout_marginTop="10dp"
               android:background="#79c1b0"
               android:text="Submit "
               android:textAllCaps="false"/>


       </LinearLayout>

   </ScrollView>


</LinearLayout>