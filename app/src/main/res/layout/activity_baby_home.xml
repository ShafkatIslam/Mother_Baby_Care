<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b18"
    android:orientation="vertical"
    tools:context=".Baby.BabyHomeActivity">

    <TextView
        android:id="@+id/babyProfilename"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Profile Information"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textColor="#fafafa"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bId"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="ID NO: "
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textColor="#fafafa"
            />

        <TextView
            android:id="@+id/currentAgeTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Current Age"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:layout_marginLeft="15dp"
            android:textColor="#fafafa"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:text="Vaccination"
            android:textAllCaps="false"
            android:background="#79c1b0"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:id="@+id/childVaccinationId"
            />

        <Button
            android:text="Forget to Take"
            android:textAllCaps="false"
            android:background="#79c1b0"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/forgetVaccine"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <Button
            android:text="Vaccine List"
            android:textAllCaps="false"
            android:background="#79c1b0"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:id="@+id/vaccineList"
            />

        <Button
            android:text="Doctor Find"
            android:textAllCaps="false"
            android:background="#79c1b0"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/childDoctorsFindId"
            />
    </LinearLayout>

    <Button
        android:text="Nearest Vaccination Center"
        android:textAllCaps="false"
        android:background="#79c1b0"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:id="@+id/vaccinationCenterId"
        />

    <Button
        android:text="Child Health Tips"
        android:textAllCaps="false"
        android:background="#79c1b0"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:id="@+id/remindersetId"
        />

    <Button
        android:text="Vaccine Schedule"
        android:textAllCaps="false"
        android:background="#79c1b0"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:id="@+id/childVaccineScheduleId"
        />

    <Button
        android:background="@drawable/alarm"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/childReminderId"
        />

</LinearLayout>