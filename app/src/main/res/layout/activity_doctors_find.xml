<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/b18"
    tools:context=".Baby.DoctorsFind.DoctorsFindActivity">

    <Button
        android:id="@+id/findByHospitalButtons"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="10dp"
        android:background="#79c1b0"
        android:text="Find By Hospital"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/findByNameButtons"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="60dp"
        android:background="#79c1b0"
        android:text="Find By Name"
        android:textAllCaps="false"/>

</LinearLayout>