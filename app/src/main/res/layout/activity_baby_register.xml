<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b18"
    android:orientation="vertical"
    tools:context=".BabyRegisterActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_gravity="center">

          <ImageView
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:background="@drawable/baby"
              android:weightSum="1"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:id="@+id/imageView1" />


          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter Name"
              android:textStyle="bold"
              android:textColor="#fdfdfd"
              android:textColorHint="#fffdfd"
              android:textSize="18sp"
              android:layout_marginTop="10dp"
              android:id="@+id/editbabyName"
              android:gravity="center"/>

          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter Mother's Email"
              android:textStyle="bold"
              android:textColor="#fdfdfd"
              android:textColorHint="#fffdfd"
              android:textSize="18sp"
              android:id="@+id/editMotherEmail"
              android:gravity="center"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter a user name"
              android:textStyle="bold"
              android:textColor="#fdfdfd"
              android:textColorHint="#fffdfd"
              android:textSize="18sp"
              android:id="@+id/editMotherCell"
              android:gravity="center"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter Father's Cell"
              android:textStyle="bold"
              android:textColor="#fdfdfd"
              android:textColorHint="#fffdfd"
              android:textSize="18sp"
              android:id="@+id/editFatherCell"
              android:gravity="center"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp">

              <Button
                  android:id="@+id/babyBirthdayId"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="70dp"
                  android:text="Select Birthday"
                  android:textAllCaps="false"
                  android:background="#79c1b0"/>

              <TextView
                  android:id="@+id/babyBirthdayTextViewId"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:textColor="#fdfdfd"
                  android:textSize="18sp"
                  android:layout_marginLeft="10dp"
                  />


          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="3dp">

              <TextView
                  android:id="@+id/babyGenderId"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginLeft="80dp"
                  android:text="Gender:"
                  android:textStyle="bold"
                  android:textColor="#fdfdfd"
                  android:textSize="18sp"/>

              <Spinner
                  android:id="@+id/spinnerId"
                  android:layout_marginTop="-8dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

              </Spinner>

          </LinearLayout>


          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textPassword"
              android:hint="Enter Password"
              android:textStyle="bold"
              android:textColor="#fdfdfd"
              android:textColorHint="#fffdfd"
              android:textSize="18sp"
              android:id="@+id/editBabyPassword"
              android:gravity="center"/>

          <Button
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:id="@+id/buttonBabyRegister"
              android:layout_marginLeft="80dp"
              android:layout_below="@+id/buttonBabyRegister"
              android:layout_marginTop="10dp"
              android:background="#79c1b0"
              android:text="Submit "
              android:textAllCaps="false"/>


      </LinearLayout>


  </ScrollView>

</LinearLayout>