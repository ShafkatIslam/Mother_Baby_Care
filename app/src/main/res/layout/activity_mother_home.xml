<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b18"
    tools:context=".Mother.MotherHomeActivity">

    <TextView
        android:id="@+id/mothersName"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Profile Information"
        android:textSize="30dp"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="#fafafa"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/mId"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="ID NO: "
            android:textSize="17sp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textColor="#fafafa"
            />

        <TextView
            android:id="@+id/mcurrentAgeTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Current Age"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:layout_marginLeft="15dp"
            android:textColor="#fafafa"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:text="Vaccination"
            android:textAllCaps="false"
            android:background="#79c1b0"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:id="@+id/vaccinationId"
            />

        <Button
            android:text="Forget to Take"
            android:textAllCaps="false"
            android:background="#79c1b0"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/forgetVaccine"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:text="Vaccine List"
            android:textAllCaps="false"
            android:background="#79c1b0"
            android:textColor="#000000"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:id="@+id/vaccineList"
            />

        <Button
            android:text="Doctor Find"
            android:textAllCaps="false"
            android:background="#79c1b0"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/doctorsFindId"
            />
    </LinearLayout>

    <Button
        android:text="Nearest Health Center"
        android:textAllCaps="false"
        android:background="#79c1b0"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:id="@+id/healthCenterId"
        />

    <Button
        android:text="Meeting With Doctors"
        android:textAllCaps="false"
        android:background="#79c1b0"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:id="@+id/meetDoctorId"
        />

    <Button
        android:text="Vaccine Schedule"
        android:textAllCaps="false"
        android:background="#79c1b0"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:id="@+id/vaccineScheduleId"
        />

    <Button
        android:background="@drawable/alarm"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:id="@+id/reminderId"
        />



</LinearLayout>