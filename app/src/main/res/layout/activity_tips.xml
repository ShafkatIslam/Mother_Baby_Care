<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mother.Vaccination.TipsActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/b18">

    <Button
        android:id="@+id/routineofFood"
        android:text="Routine of Food"
        android:textAllCaps="false"
        android:background="#79c1b0"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/routineofVaccine"
        android:text="Routine of Vaccine"
        android:textAllCaps="false"
        android:background="#79c1b0"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        />


</LinearLayout>